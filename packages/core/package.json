{
  "name": "@sylphx/silk",
  "version": "2.0.2",
  "description": "Type-safe CSS-in-TypeScript without codegen. 45-65% smaller CSS in production with modern color functions (oklch, color-mix) and native nesting.",
  "keywords": [
    "css",
    "css-in-js",
    "typescript",
    "atomic-css",
    "zero-runtime",
    "type-safe",
    "tailwind",
    "panda-css",
    "critical-css",
    "performance"
  ],
  "author": "SylphX Ltd",
  "license": "MIT",
  "homepage": "https://sylphx.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphxltd/silk.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/sylphxltd/silk/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./optimizer": {
      "import": "./dist/build-optimizer.js",
      "types": "./dist/build-optimizer.d.ts"
    },
    "./codegen": {
      "import": "./dist/codegen-node.js",
      "types": "./dist/codegen-node.d.ts"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "!dist/**/*.demo.*",
    "!dist/**/*.test.*",
    "!dist/**/*.bench.*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "bun run build && bun run test"
  },
  "dependencies": {
    "lightningcss-wasm": "^1.30.1"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
