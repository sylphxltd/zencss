{
  "name": "@sylphx/silk-remix",
  "version": "2.0.5",
  "description": "Remix integration for Silk - zero-runtime CSS-in-TypeScript with streaming SSR support",
  "keywords": [
    "css",
    "css-in-js",
    "typescript",
    "remix",
    "react",
    "ssr",
    "streaming",
    "silk"
  ],
  "author": "SylphX Ltd",
  "license": "MIT",
  "homepage": "https://sylphx.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/silk.git",
    "directory": "packages/remix-plugin"
  },
  "bugs": {
    "url": "https://github.com/SylphxAI/silk/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vite": {
      "import": "./dist/vite.js",
      "types": "./dist/vite.d.ts"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "@remix-run/node": "^1.0.0 || ^2.0.0",
    "@remix-run/react": "^1.0.0 || ^2.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@sylphx/silk": "^2.0.0",
    "@sylphx/silk-react": "^2.0.2",
    "@sylphx/silk-vite-plugin": "^2.0.2"
  },
  "devDependencies": {
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
