{
  "name": "@sylphx/silk-nextjs",
  "version": "2.0.1",
  "description": "Next.js integration for Silk - zero-runtime CSS-in-TypeScript with App Router support",
  "keywords": [
    "css",
    "css-in-js",
    "typescript",
    "nextjs",
    "next",
    "app-router",
    "react-server-components",
    "silk"
  ],
  "author": "SylphX Ltd",
  "license": "MIT",
  "homepage": "https://sylphx.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphxltd/silk.git",
    "directory": "packages/nextjs-plugin"
  },
  "bugs": {
    "url": "https://github.com/sylphxltd/silk/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@sylphx/silk": "workspace:*",
    "@sylphx/silk-react": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
