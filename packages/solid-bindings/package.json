{
  "name": "@sylphx/silk-solid",
  "version": "2.0.3",
  "description": "Solid.js bindings for Silk - zero-runtime CSS-in-TypeScript with fine-grained reactivity",
  "keywords": [
    "css",
    "css-in-js",
    "typescript",
    "solidjs",
    "solid",
    "reactive",
    "fine-grained",
    "silk"
  ],
  "author": "SylphX Ltd",
  "license": "MIT",
  "homepage": "https://sylphx.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphxltd/silk.git",
    "directory": "packages/solid-bindings"
  },
  "bugs": {
    "url": "https://github.com/sylphxltd/silk/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vite": {
      "import": "./dist/vite.js",
      "types": "./dist/vite.d.ts"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "solid-js": "^1.7.0"
  },
  "dependencies": {
    "@sylphx/silk": "workspace:*",
    "@sylphx/silk-vite-plugin": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "solid-js": "^1.8.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
