{
  "name": "@sylphx/silk-webpack-plugin",
  "version": "1.0.0",
  "description": "Webpack plugin for Silk - Zero-codegen CSS-in-TypeScript with virtual modules",
  "keywords": [
    "silk",
    "webpack",
    "webpack-plugin",
    "css-in-js",
    "typescript",
    "zero-codegen"
  ],
  "author": "SylphX Ltd",
  "license": "MIT",
  "homepage": "https://sylphx.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphxltd/silk.git",
    "directory": "packages/webpack-plugin"
  },
  "bugs": {
    "url": "https://github.com/sylphxltd/silk/issues"
  },
