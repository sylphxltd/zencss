{
  "name": "@sylphx/swc-plugin-silk",
  "version": "0.1.0",
  "description": "SWC plugin for Silk - zero-runtime CSS-in-TypeScript",
  "keywords": [
    "swc",
    "swc-plugin",
    "css",
    "css-in-js",
    "typescript",
    "zero-runtime",
    "silk"
  ],
  "author": "SylphX Ltd",
  "license": "MIT",
  "homepage": "https://sylphx.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphxltd/silk.git",
    "directory": "packages/swc-plugin"
  },
  "bugs": {
    "url": "https://github.com/sylphxltd/silk/issues"
  },
  "files": [
    "target/wasm32-wasip1/release/*.wasm",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:assemblyscript": "cd assemblyscript && npm run asbuild",
    "build:rust": "cargo build --release --target wasm32-wasip1",
    "build": "npm run build:assemblyscript && npm run build:rust",
    "test": "npm run test:rust && npm run test:vitest",
    "test:rust": "cargo test",
    "test:vitest": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@swc/core": "^1.9.3",
    "@types/node": "^20",
    "typescript": "^5",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
